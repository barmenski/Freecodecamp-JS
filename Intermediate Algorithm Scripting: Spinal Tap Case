function spinalCase(str) {
  //var tryCatch=str.replace(/\b/gi, str=>str.toLowerCase());
  //\B[A-Z] https://regex101.com/
   var tryCatch=str.replace(/\s|\B[A-Z]/g, "-");
   tryCatch=tryCatch.toLowerCase();
  console.log(tryCatch);
  str=tryCatch
  return str;
}

